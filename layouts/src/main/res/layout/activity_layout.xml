<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="#4F7AE8"
    android:gravity="center">

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#4F7AE8"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginBottom="7.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="0.5"
                android:background="#E7BE56"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="POST /spectrum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="postSpectrum"/>

            <Button
                android:layout_marginBottom="15dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="0.5"
                android:background="#E7BE56"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="POST /location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="postLocation"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginBottom="7.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.5"
                android:background="#E7BE56"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="GET /spectrum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="getSpectrum"/>

            <Button
                android:layout_marginBottom="15dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.5"
                android:background="#E7BE56"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="GET /location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="getLocation"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#4F7AE8">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/responseBox"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D2D5DB"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>